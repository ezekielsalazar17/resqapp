<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splashbg"
    android:visibility="visible"
    tools:context=".SplashActivity"
    android:orientation="vertical">


    <Button
        android:id="@+id/login"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/login_radius"
        android:fontFamily="@font/oswald_bold"
        android:text="@string/login"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="TextContrastCheck,TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/offline_mode"
        android:layout_width="110dp"
        android:layout_height="40dp"
        android:layout_marginTop="140dp"
        android:fontFamily="@font/oswald_bold"
        android:text="@string/offline_mode"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/logo"
        app:layout_constraintHorizontal_bias="0.464"
        app:layout_constraintStart_toStartOf="@+id/logo"
        app:layout_constraintTop_toTopOf="@+id/logo"
        tools:ignore="TextSizeCheck" />


    <TextView
        android:id="@+id/emergency_hotline"
        android:layout_width="190dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/oswald_bold"
        android:text="@string/emergency_hotlines"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo"
        tools:ignore="TextSizeCheck" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="250dp"
        android:layout_height="170dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.527"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login"
        app:srcCompat="@drawable/resqapplogo"
        tools:ignore="ContentDescription,VisualLintBounds" />

    <Button
        android:id="@+id/next_page"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/login_radius"
        android:fontFamily="@font/oswald_bold"
        android:text="@string/next"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.967"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/coast_text"
        app:layout_constraintVertical_bias="1.0"
        tools:ignore="TextContrastCheck,TouchTargetSizeCheck" />

    <ImageButton
        android:id="@+id/ambulance_button"
        android:layout_width="160dp"
        android:layout_height="147dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/offline_button"
        android:padding="15dp"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toStartOf="@+id/coastguard_button"
        app:layout_constraintHorizontal_bias="0.769"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/emergency_hotline"
        tools:ignore="ContentDescription,SpeakableTextPresentCheck,ImageContrastCheck,VisualLintBounds" />

    <TextView
        android:id="@+id/coast_button_offline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/oswald_bold"
        android:text="@string/text_inside_offline_button_fire"
        android:textColor="@color/black"
        android:textSize="35sp"
        app:layout_constraintBottom_toBottomOf="@+id/ambulance_button"
        app:layout_constraintEnd_toEndOf="@+id/ambulance_button"
        app:layout_constraintStart_toStartOf="@+id/ambulance_button"
        app:layout_constraintTop_toTopOf="@+id/ambulance_button" />

    <ImageButton
        android:id="@+id/coastguard_button"
        android:layout_width="160dp"
        android:layout_height="147dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/offline_button"
        android:padding="15dp"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.836"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/emergency_hotline"
        tools:ignore="ContentDescription,SpeakableTextPresentCheck,ImageContrastCheck,VisualLintBounds" />

    <ImageButton
        android:id="@+id/police_button"
        android:layout_width="160dp"
        android:layout_height="147dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/offline_button"
        android:padding="15dp"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.836"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/police_text"
        tools:ignore="ContentDescription,SpeakableTextPresentCheck,ImageContrastCheck,VisualLintBounds" />

    <ImageButton
        android:id="@+id/fire_button"
        android:layout_width="160dp"
        android:layout_height="147dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/offline_button"
        android:padding="15dp"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toStartOf="@+id/police_button"
        app:layout_constraintHorizontal_bias="0.769"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fire_text"
        tools:ignore="ContentDescription,SpeakableTextPresentCheck,ImageContrastCheck,VisualLintBounds" />

    <TextView
        android:id="@+id/ambulance_button_offline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/oswald_bold"
        android:text="@string/text_inside_offline_button_ambulance"
        android:textColor="@color/black"
        android:textSize="33sp"
        app:layout_constraintBottom_toBottomOf="@+id/fire_button"
        app:layout_constraintEnd_toEndOf="@+id/fire_button"
        app:layout_constraintStart_toStartOf="@+id/fire_button"
        app:layout_constraintTop_toTopOf="@+id/fire_button" />

    <TextView
        android:id="@+id/fire_button_offline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/oswald_bold"
        android:text="@string/text_inside_offline_button_fire"
        android:textColor="@color/black"
        android:textSize="35sp"
        app:layout_constraintBottom_toBottomOf="@+id/police_button"
        app:layout_constraintEnd_toEndOf="@+id/police_button"
        app:layout_constraintStart_toStartOf="@+id/police_button"
        app:layout_constraintTop_toTopOf="@+id/police_button" />

    <TextView
        android:id="@+id/police_button_offline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/oswald_bold"
        android:text="@string/text_inside_offline_button_police"
        android:textColor="@color/black"
        android:textSize="28sp"
        app:layout_constraintBottom_toBottomOf="@+id/coastguard_button"
        app:layout_constraintEnd_toEndOf="@+id/coastguard_button"
        app:layout_constraintHorizontal_bias="0.444"
        app:layout_constraintStart_toStartOf="@+id/coastguard_button"
        app:layout_constraintTop_toTopOf="@+id/coastguard_button" />

    <TextView
        android:id="@+id/ambulance_text"
        android:layout_width="80dp"
        android:layout_height="42dp"
        android:fontFamily="@font/oswald"
        android:letterSpacing="0.05"
        android:text="@string/ambulance_department_offline"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/coast_text"
        app:layout_constraintHorizontal_bias="0.510"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fire_button"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/coast_text"
        android:layout_width="100dp"
        android:layout_height="42dp"
        android:fontFamily="@font/oswald"
        android:letterSpacing="0.05"
        android:text="@string/coast_guard_department_offline"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.775"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/police_button" />

    <TextView
        android:id="@+id/fire_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/oswald"
        android:letterSpacing="0.05"
        android:text="@string/fire_department"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@+id/police_text"
        app:layout_constraintHorizontal_bias="0.522"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ambulance_button" />

    <TextView
        android:id="@+id/police_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="56dp"
        android:fontFamily="@font/oswald"
        android:letterSpacing="0.05"
        android:text="@string/police_department"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/coastguard_button" />


</androidx.constraintlayout.widget.ConstraintLayout>