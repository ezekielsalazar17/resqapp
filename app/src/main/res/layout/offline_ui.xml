<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splashbg"
    android:visibility="visible"
    tools:context=".SplashActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="410dp"
        android:layout_height="45dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/login"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/login_radius"
            android:fontFamily="@font/oswald_bold"
            android:text="@string/login"
            android:textColor="#FFFFFF"
            tools:ignore="TextContrastCheck,TouchTargetSizeCheck" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="horizontal"
        tools:ignore="UseCompoundDrawables">



        <ImageView
            android:id="@+id/logo"
            android:layout_width="410dp"
            android:layout_height="250dp"
            android:padding="55dp"
            android:layout_marginTop="-60dp"
            app:srcCompat="@drawable/img3"
            tools:ignore="ContentDescription,VisualLintBounds" />

        <TextView
            android:id="@+id/offline_mode"
            android:layout_width="110dp"
            android:layout_height="40dp"
            android:layout_marginStart="-252dp"
            android:layout_marginTop="125dp"
            android:fontFamily="@font/oswald_bold"
            android:text="@string/offline_mode"
            android:textColor="@color/white"
            android:textSize="18sp"
            tools:ignore="TextSizeCheck" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/emergency_hotline"
            android:layout_width="190dp"
            android:layout_height="40dp"
            android:layout_marginStart="120dp"
            android:fontFamily="@font/oswald_bold"
            android:text="@string/emergency_hotlines"
            android:textColor="@color/white"
            android:textSize="20sp"
            tools:ignore="TextSizeCheck" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="410dp"
        android:layout_height="170dp"
        android:orientation="horizontal"
        >

        <androidx.cardview.widget.CardView
            android:layout_width="411dp"
            android:layout_height="170dp"
            android:backgroundTint="@android:color/transparent"
            tools:ignore="VisualLintBounds,TextSizeCheck">

            <ImageButton
                android:id="@+id/fire_button"
                android:layout_width="160dp"
                android:layout_height="147dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="13dp"
                android:background="@drawable/offline_button"
                android:padding="15dp"
                android:scaleType="fitXY"
                tools:ignore="ContentDescription,SpeakableTextPresentCheck,ImageContrastCheck,VisualLintBounds" />

            <TextView
                android:id="@+id/fire_button_offline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginTop="40dp"
                android:fontFamily="@font/oswald_bold"
                android:text="@string/text_inside_offline_button_fire"
                android:textColor="@color/black"
                android:textSize="35sp" />

            <ImageButton
                android:id="@+id/police_button"
                android:layout_width="160dp"
                android:layout_height="147dp"
                android:layout_marginStart="210dp"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="13dp"
                android:background="@drawable/offline_button"
                android:padding="15dp"
                android:scaleType="fitXY"
                tools:ignore="ContentDescription,SpeakableTextPresentCheck,ImageContrastCheck,VisualLintBounds" />

            <TextView
                android:id="@+id/police_button_offline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="215dp"
                android:layout_marginTop="70dp"
                android:fontFamily="@font/oswald_bold"
                android:text="@string/text_inside_offline_button_police"
                android:textColor="@color/black"
                android:textSize="28sp" />

        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <androidx.cardview.widget.CardView
            android:layout_width="411dp"
            android:layout_height="35dp"
            android:backgroundTint="@android:color/transparent"
            tools:ignore="TextSizeCheck">

            <TextView
                android:id="@+id/fire_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="70dp"
                android:layout_marginTop="1dp"
                android:fontFamily="@font/oswald"
                android:letterSpacing="0.05"
                android:text="@string/fire_department"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/police_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="233dp"
                android:layout_marginTop="1dp"
                android:fontFamily="@font/oswald"
                android:letterSpacing="0.05"
                android:text="@string/police_department"
                android:textColor="@color/white"
                android:textSize="14sp" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <androidx.cardview.widget.CardView
            android:layout_width="411dp"
            android:layout_height="157dp"
            android:backgroundTint="@android:color/transparent"
            tools:ignore="TextSizeCheck">

            <ImageButton
                android:id="@+id/ambulance_button"
                android:layout_width="160dp"
                android:layout_height="147dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="13dp"
                android:background="@drawable/offline_button"
                android:padding="15dp"
                android:scaleType="fitXY"
                tools:ignore="ContentDescription,SpeakableTextPresentCheck,ImageContrastCheck,VisualLintBounds" />

            <TextView
                android:id="@+id/ambulance_button_offline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="47dp"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/oswald_bold"
                android:text="@string/text_inside_offline_button_ambulance"
                android:textColor="@color/black"
                android:textSize="33sp" />

            <ImageButton
                android:id="@+id/coastguard_button"
                android:layout_width="160dp"
                android:layout_height="147dp"
                android:layout_marginStart="210dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="13dp"
                android:background="@drawable/offline_button"
                android:padding="15dp"
                android:scaleType="fitXY"
                tools:ignore="ContentDescription,SpeakableTextPresentCheck,ImageContrastCheck,VisualLintBounds" />

            <TextView
                android:id="@+id/coast_button_offline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="220dp"
                android:layout_marginTop="27dp"
                android:fontFamily="@font/oswald_bold"
                android:text="@string/text_inside_offline_button_fire"
                android:textColor="@color/black"
                android:textSize="35sp" />

        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <androidx.cardview.widget.CardView
            android:layout_width="411dp"
            android:layout_height="60dp"
            tools:ignore="TextSizeCheck"
            android:backgroundTint="@android:color/transparent"
            >

            <TextView
                android:id="@+id/ambulance_text"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:layout_marginStart="83dp"
                android:fontFamily="@font/oswald"
                android:letterSpacing="0.05"
                android:textAlignment="center"
                android:text="@string/ambulance_department_offline"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/coast_text"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_marginStart="240dp"
                android:fontFamily="@font/oswald"
                android:letterSpacing="0.05"
                android:textAlignment="center"
                android:text="@string/coast_guard_department_offline"
                android:textColor="@color/white"
                android:textSize="14sp" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</LinearLayout>