<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="410dp"
        android:layout_height="45dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/burger"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/burger_tab_border"
            android:scaleType="fitCenter"
            android:src="@drawable/burger_tab"
            tools:ignore="ContentDescription,SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="410dp"
        android:layout_height="65dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="338dp"
            android:layout_height="55dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/oswald_bold"
            android:text="@string/ambulance_department_admin"
            android:textAlignment="center"
            android:textColor="#668AB9"
            android:textSize="32sp"
            tools:ignore="TextSizeCheck" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="410dp"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="270dp"
            android:layout_height="40dp"
            android:layout_marginStart="75dp"
            android:fontFamily="@font/oswald_bold"
            android:text="@string/dashboard"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="25sp"
            tools:ignore="TextSizeCheck" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="550dp"
        android:orientation="horizontal"
        tools:ignore="VisualLintBounds">

        <androidx.cardview.widget.CardView
            android:layout_width="350dp"
            android:layout_height="530dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="112dp"
            app:cardBackgroundColor="#668AB9"
            app:cardCornerRadius="15dp">

            <androidx.cardview.widget.CardView
                android:layout_width="340dp"
                android:layout_height="520dp"
                android:layout_marginVertical="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                app:cardBackgroundColor="#FAFAFA"
                app:cardCornerRadius="15dp"
                tools:ignore="TextSizeCheck">

                <androidx.cardview.widget.CardView
                    android:layout_width="300dp"
                    android:layout_height="80dp"
                    android:layout_marginVertical="20dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="5dp"
                    app:cardBackgroundColor="#668AB9"
                    app:cardCornerRadius="15dp"
                    tools:ignore="TextSizeCheck">

                    <androidx.cardview.widget.CardView
                        android:layout_width="296dp"
                        android:layout_height="76dp"
                        android:layout_marginVertical="2dp"
                        android:layout_marginStart="2dp"
                        android:layout_marginEnd="2dp"
                        app:cardBackgroundColor="#FAFAFA"
                        app:cardCornerRadius="13dp"
                        tools:ignore="TextSizeCheck">

                        <TextView
                            android:id="@+id/name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingStart="15dp"
                            android:paddingTop="5dp"
                            android:text="@string/name"
                            android:textColor="@color/black"
                            android:fontFamily="@font/oswald_light"
                            tools:ignore="RtlSymmetry" />
                        <TextView
                            android:id="@+id/contact_number"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingStart="15dp"
                            android:paddingTop="20dp"
                            android:text="@string/contact_number"
                            android:textColor="@color/black"
                            android:fontFamily="@font/oswald_light"
                            tools:ignore="RtlSymmetry" />
                        <TextView
                            android:id="@+id/gps_location"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingStart="15dp"
                            android:paddingTop="35dp"
                            android:text="@string/gps_location"
                            android:textColor="@color/black"
                            android:fontFamily="@font/oswald_light"
                            tools:ignore="RtlSymmetry" />



                    </androidx.cardview.widget.CardView>
                </androidx.cardview.widget.CardView>
            </androidx.cardview.widget.CardView>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</LinearLayout>