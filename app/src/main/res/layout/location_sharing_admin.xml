<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#9BBEE6"
    tools:context=".DashboardUser">


    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:padding="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/resqapplogo"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/admin_loc"
        android:layout_width="280dp"
        android:layout_height="30dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/white_border_location_sharing"
        android:fontFamily="@font/oswald"
        android:paddingStart="10dp"
        android:paddingTop="5dp"
        android:text="@string/admin_location"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.679"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3"
        tools:ignore="RtlSymmetry,TextSizeCheck" />

    <ImageView
        android:id="@+id/location_icon"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="28dp"
        android:src="@drawable/baseline_location_on_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/white1"
        tools:ignore="ContentDescription,ImageContrastCheck" />

    <ImageView
        android:id="@+id/white3"
        android:layout_width="7dp"
        android:layout_height="7dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/white_circle"
        app:layout_constraintStart_toStartOf="@+id/white1"
        app:layout_constraintTop_toBottomOf="@+id/white1"
        tools:ignore="ContentDescription,ImageContrastCheck" />

    <ImageView
        android:id="@+id/white4"
        android:layout_width="7dp"
        android:layout_height="7dp"
        android:layout_marginTop="4dp"
        android:src="@drawable/white_circle"
        app:layout_constraintStart_toStartOf="@+id/white3"
        app:layout_constraintTop_toBottomOf="@+id/white3"
        tools:ignore="ContentDescription,ImageContrastCheck" />

    <ImageView
        android:id="@+id/white1"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="36dp"
        android:padding="2dp"
        android:src="@drawable/white_circle"
        app:layout_constraintStart_toStartOf="@+id/imageView3"
        app:layout_constraintTop_toBottomOf="@+id/imageView3"
        tools:ignore="ContentDescription,ImageContrastCheck" />

    <TextView
        android:id="@+id/user_loc"
        android:layout_width="280dp"
        android:layout_height="30dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/white_border_location_sharing"
        android:fontFamily="@font/oswald"
        android:paddingStart="10dp"
        android:paddingTop="5dp"
        android:text="@string/user_location"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@+id/admin_loc"
        app:layout_constraintTop_toBottomOf="@+id/admin_loc"
        tools:ignore="RtlSymmetry,TextSizeCheck" />

    <Button
        android:id="@+id/go_to_gmaps"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_marginTop="44dp"
        android:textSize="20sp"
        android:textAlignment="center"
        android:fontFamily="@font/oswald"
        android:background="@drawable/border_white"
        android:text="@string/go_to_gmaps"
        app:layout_constraintEnd_toEndOf="@+id/user_loc"
        app:layout_constraintHorizontal_bias="0.344"
        app:layout_constraintStart_toStartOf="@+id/user_loc"
        app:layout_constraintTop_toBottomOf="@+id/user_loc"
        tools:ignore="ButtonStyle" />

    <Button
        android:id="@+id/chat"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/border_white"
        android:fontFamily="@font/oswald"
        android:text="@string/CHAT"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/go_to_gmaps"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/go_to_gmaps"
        app:layout_constraintTop_toBottomOf="@+id/go_to_gmaps"
        tools:ignore="ButtonStyle" />

    <Button
        android:id="@+id/done"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_marginTop="96dp"
        android:background="@drawable/border_white"
        android:fontFamily="@font/oswald"
        android:textSize="20sp"
        android:text="@string/done"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="@+id/chat"
        app:layout_constraintHorizontal_bias="0.566"
        app:layout_constraintStart_toStartOf="@+id/chat"
        app:layout_constraintTop_toBottomOf="@+id/chat" />

</androidx.constraintlayout.widget.ConstraintLayout>